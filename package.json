{
  "name": "metanorma-cache",
  "version": "2.0.0",
  "description": "Cache metanorma-related assets (fonts, workgroups)",
  "main": "lib/main.js",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc --noEmit && esbuild src/main.ts --bundle --platform=node --target=node24 --format=cjs --outfile=dist/index.cjs --minify --sourcemap",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "github",
    "actions",
    "cache",
    "metanorma"
  ],
  "author": "Ribose Inc.",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^6.0.0",
    "@actions/core": "^3.0.0",
    "glob": "^11.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@types/node": "^24.x",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^9.18.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-i18n-text": "^1.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
